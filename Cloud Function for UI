const { onRequest } = require("firebase-functions/v2/https");
const admin = require("firebase-admin");
const { GoogleGenerativeAI } = require("@google/generative-ai");

// Initialize Firebase Admin
admin.initializeApp();

// Initialize Gemini
const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

exports.generateGoalFromDream = onRequest(async (req, res) => {
  try {
    // ğŸ” 1ï¸âƒ£ Verify Firebase Auth Token
    const authHeader = req.headers.authorization;
    if (!authHeader || !authHeader.startsWith("Bearer ")) {
      return res.status(401).json({ error: "Unauthorized" });
    }

    const idToken = authHeader.split("Bearer ")[1];
    const decodedToken = await admin.auth().verifyIdToken(idToken);
    const uid = decodedToken.uid;

    // ğŸ“ 2ï¸âƒ£ Get dream text from request
    const { dreamText } = req.body;
    if (!dreamText || dreamText.trim() === "") {
      return res.status(400).json({ error: "Dream text is required" });
    }

    // ğŸ¤– 3ï¸âƒ£ Call Gemini
    const model = genAI.getGenerativeModel({ model: "gemini-2.0-flash" });
    const prompt = `
A user shared this dream:
"${dreamText}"

Turn this into:
1. A clear actionable goal
2. 3 short milestones
3. A short motivational message

Return it clearly formatted.
`;

    const result = await model.generateContent(prompt);
    const aiText = result.response.text();

    // ğŸ’¾ 4ï¸âƒ£ Store dream + AI output in Firestore
    const dreamRef = await admin
      .firestore()
      .collection("users")
      .doc(uid)
      .collection("dreams")
      .add({
        dreamText,
        aiResponse: aiText,
        createdAt: admin.firestore.FieldValue.serverTimestamp(),
      });

    // ğŸ“¤ 5ï¸âƒ£ Send AI response back to frontend
    return res.status(200).json({
      message: "Dream stored successfully",
      dreamId: dreamRef.id,
      aiResponse: aiText,
    });
  } catch (error) {
    console.error("Error:", error);
    return res.status(500).json({
      error: "Something went wrong",
    });
  }
});

